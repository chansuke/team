{{#*inline "page"}}
  <strong><a href="/nippo/new">New</a></strong>
  <ul>
  {{#each nippos}}
    <li>
      <img src="{{user.icon_url}}" width="50px;">
      <br>
      <b><a href="/nippo/show/{{id}}">{{title}}</a></b>
    </li>
  {{/each}}
  </ul>
  <div class="paginates">
    <a href="/nippo/list?page={{prev_page}}">前</a>
    {{total_count}}
    <a href="/nippo/list?page={{next_page}}">次</a>
  </div>
{{/inline}}
{{~> layout ~}}
